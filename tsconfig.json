{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"sourceMap": false,
		"allowJs": true,
		"jsx": "react",
    "baseUrl": "./",
    "paths": {
	  // 根据别名配置相关路径
      "/@/*": ["./src/*"]
    }
	},
	// 匹配列表（属于自动指定该路径下的所有ts相关文件）
	"include": [
		"src/**/*.ts"
	],
	// 排除列表（include的反向操作）
	"exclude": [
		"node_modules"
	]
}
